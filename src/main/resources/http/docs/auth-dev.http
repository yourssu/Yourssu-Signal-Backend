### Development Only - Generate token for specific UUID
### Available only in non-production environments
POST {{host}}/api/auth/dev/token
Content-Type: application/json

{
  "uuid": "f3436152-47f7-4ec1-8dc0-17cd911526b6",
  "accessKey": "{{access-key}}"
}

> {%
    client.test("Dev token generated successfully", function() {
        client.assert(response.status === 200, "Expected 200 OK");
        client.assert(response.body.result.accessToken, "Access token should be present");
        client.assert(response.body.result.refreshToken, "Refresh token should be present");
    });
    
    if (response.body.result) {
        client.global.set("accessToken", response.body.result.accessToken);
        client.global.set("refreshToken", response.body.result.refreshToken);
        client.log("Tokens saved to global variables");
    }
%}

###
